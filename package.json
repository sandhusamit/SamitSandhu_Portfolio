{
  "name": "mern_skeleton",
  "version": "1.0.0",
  "description": "MERN skeleton project with parallel client & server setup",
  "license": "ISC",
  "author": "Samit",
  "type": "module",
  "main": "server/server.js",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start:server": "nodemon server/server.js",
    "start:client": "npm --prefix client run dev",
    "dev": "npm-run-all --parallel start:server start:client",
    "build:client": "vite build --cwd client",
    "preview:client": "vite preview --cwd client",
    "start:localserver": "cross-env NODE_ENV=local_dev nodemon server/server.js",
    "dev:local": "npm-run-all --parallel start:localserver start:client"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "global": "^4.4.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "vite": "^5.4.21"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.1",
    "vite": "^7.1.2"
  }
}
